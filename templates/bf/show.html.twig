{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
 <a href="{{ path('bf_index') }}" class="btn btn-main" style="margin-left:60px; margin-top:15px;"> << Liste des blogs</a>
    <section class="about-section section-padding">
    <div class="container">
        <div class="row align-items-center" >
            <div class="col-xl-6 col-lg-6" style="border:1px solid black">

                <img src="{{ asset('uploads/') ~blog.image }}" class="img-fluid">
               
            </div>

            <div class="col-xl-6 pl-5 col-lg-6">
                <div class="section-heading mt-4 mt-lg-0 ">
                    <span class="subheading">Blog numero : {{ blog.id }}</span>
                    <h3>{{ blog.title }}</h3>
                    <p>{{ blog.description }}</p>
                    
                </div>
                <ul class="about-features">
                    <li>
                        
                        <h5>Publié le : {{ blog.date ? blog.date|date('Y-m-d') : '' }}</h5>
                    </li>
                </ul>

   
            </div>
        </div>
    </div>
</section>



     <h1> {{blog.avis | length }} personnes ont réagis a ce blog :</h1>
    <div class="comments-form p-lg-5 mt-4 ">
            <h3> Votre avis nous intéresse ! </h3>
    {% for avi in blog.avis %}

        <p> <b> Avis N°{{ avi.id }} </b> : {{ avi.commentaire }}</p>
                
                {% endfor %}
                    {{form_start(commentForm)}}
        <form action="#" class="comment_form">
            <div class="row form-row">
                <div class="col-lg-12">
                    <div class="form-group">
{{    form_row(commentForm.commentaire,{'attr':{'placeholder': "Ecrire quelque chose"} } )}}
                    </div>
               
                 <div class="col-lg-12">
                    <div class="form-group">
                    <button type="submit"  class="btn btn-main">Donner votre avis</button>
                    </div>
                </div>
            </div>
        </form>
        {{form_end(commentForm)}}
    </div>    



    
 
{% endblock %}

   