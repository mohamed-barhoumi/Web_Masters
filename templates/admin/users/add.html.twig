{% extends 'admin/base.html.twig' %}

{% block title %}<title>Add course</title>{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <h4 class="m-t-0 header-title">AJOUTER UN NOUVEAU LOGISTICIEN</h4>
                <div class="row">
                    <div class="col-12">
                        <div class="p-20">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div class="row">
                                <div class="col-sm-12 col-md-6">
                                    <div class="dt-buttons btn-group">
                                        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                                        <div class="p-3"></div>
                                        <a href="{{ path('user_back_index') }}" class="btn btn-secondary buttons-copy buttons-html5">
                                            <span>Back to list</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}